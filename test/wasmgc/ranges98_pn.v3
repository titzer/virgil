//@execute (10,3,1,4)=4; (10,5,4,6)=6; (-10,3,1,4)=4; (-10,5,4,6)=6

def main(len: int, count: int, offset: int, value: int) -> int {
	var r: Range<u16>;
	if (len < 0) {
		var p = Pointer.NULL;
		for (i < -len) { (p + i * 2).store<u16>(u16.!(i)); }
		r = CiRuntime.forgeRange<u16>(p + 3 * 2, count);
	} else {
		var a = Array<u16>.new(len);
		for (i < len) a[i] = u16.!(i);
		r = a[3 ..+ count];
	}
	return int.!(r[offset] = u16.!(value));
}
