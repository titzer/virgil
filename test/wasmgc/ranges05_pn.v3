//@execute (10,2,3,1)=3; (10,3,5,4)=7; (-10,2,3,1)=3; (-10,3,5,4)=7

def main(len: int, start: int, count: int, offset: int) -> int {
	var r: Range<i8>;
	if (len < 0) {
		var p = Pointer.NULL;
		for (i < -len) { (p + i * 1).store<i8>(i8.!(i)); }
		r = CiRuntime.forgeRange<i8>(p + start * 1, count);
	} else {
		var a = Array<i8>.new(len);
		for (i < len) a[i] = i8.!(i);
		r = a[start ..+ count];
	}
	return int.!(r[offset]);
}
