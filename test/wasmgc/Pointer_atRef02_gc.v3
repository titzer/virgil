//@execute 0=!BoundsCheckException; 1=!BoundsCheckException; 2=!BoundsCheckException; 3=!BoundsCheckException; 4=!BoundsCheckException; 5=!BoundsCheckException

layout L {
	+0	x:	u32;
	=4;
}

var x = Array<byte>.new(8);
var r1 = Ref<L>.at(x, 0);
var r2 = Ref<L>.at(x, 4);

def main(a: int) -> int {
	var y = Pointer.atElement(x, a);
	var result = 0;
	if (y == Pointer.atRef(r1)) result |= 1;
	if (y == Pointer.atRef(r2)) result |= 2;
	return result;
}
