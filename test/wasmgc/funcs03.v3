// Test function variables that are class methods, called from a class method

class A {
	def f1(i: int) -> int { return i + 1; }
	def f2(i: int) -> int { return i - 1; }
	def apply(f: (A, int) -> int, arg: int, times: int) -> int {
		for (i < times) arg = f(this, arg);
		return arg;
	}
}

def main(which: int, val: int, times: int) -> int {
	var a = A.new();
	var f = if(which > 0, A.f1, A.f2);
	return a.apply(f, val, times);
}
