//@execute (10,3,1,4)=4; (10,5,4,6)=6; (-10,3,1,4)=4; (-10,5,4,6)=6

def main(len: int, count: int, offset: int, value: int) -> int {
	var r: Range<i8>;
	if (len < 0) {
		var p = Pointer.NULL;
		for (i < -len) { (p + i * 1).store<i8>(i8.!(i)); }
		r = CiRuntime.forgeRange<i8>(p + 3 * 1, count);
	} else {
		var a = Array<i8>.new(len);
		for (i < len) a[i] = i8.!(i);
		r = a[3 ..+ count];
	}
	return int.!(r[offset] = i8.!(value));
}
