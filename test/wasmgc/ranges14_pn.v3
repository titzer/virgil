//@execute (10,2,3,1)=3; (10,3,5,4)=7; (-10,2,3,1)=3; (-10,3,5,4)=7

def main(len: int, start: int, count: int, offset: int) -> int {
	var r: Range<u32>;
	if (len < 0) {
		var p = Pointer.NULL;
		for (i < -len) { (p + i * 4).store<u32>(u32.!(i)); }
		r = CiRuntime.forgeRange<u32>(p + start * 4, count);
	} else {
		var a = Array<u32>.new(len);
		for (i < len) a[i] = u32.!(i);
		r = a[start ..+ count];
	}
	return int.!(r[offset]);
}
