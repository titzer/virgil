//@execute 0=true; 3=true; -2=true
def main(a: int) -> bool {
	var f  = float.!(a);
	var d0 = double.!(a);
	// Create many derived values in both precisions
	var f1 = f + 1,  f2 = f + 2,  f3 = f + 3,  f4 = f + 4,  f5 = f + 5,  f6 = f + 6;
	var d1 = d0 + 1.0, d2 = d0 + 2.0, d3 = d0 + 3.0, d4 = d0 + 4.0, d5 = d0 + 5.0, d6 = d0 + 6.0;

	// Convert across widths and back, then compare (true for small |a| in executes)
	var fi1 = int.!(f1), fi2 = int.!(f2), fi3 = int.!(f3), fi4 = int.!(f4), fi5 = int.!(f5), fi6 = int.!(f6);
	var df1 = float.!(int.!(d1)), df2 = float.!(int.!(d2)), df3 = float.!(int.!(d3));
	var df4 = float.!(int.!(d4)), df5 = float.!(int.!(d5)), df6 = float.!(int.!(d6));

	var c1 = float.!(fi1) == f1, c2 = float.!(fi2) == f2, c3 = float.!(fi3) == f3;
	var c4 = float.!(fi4) == f4, c5 = float.!(fi5) == f5, c6 = float.!(fi6) == f6;

	var c7 = df1 == f1, c8 = df2 == f2, c9 = df3 == f3, c10 = df4 == f4, c11 = df5 == f5, c12 = df6 == f6;

	return c1 & c2 & c3 & c4 & c5 & c6 & c7 & c8 & c9 & c10 & c11 & c12;
}
