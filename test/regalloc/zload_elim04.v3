//@execute (0, 0, 0)=true; (0, 0, 1)=false; (0, 1, 0)=false; (0, 1, 1)=true
// tests whether a CallFunction kills loads (as it should)
component A {
	var i: int;
	def update(newi: int) {
		CiTest.killRegisters();
		i = newi;
	}
}
type B {
	case B1 { def update(i: int) { A.i = i; } }
	case B2 { def update(i: int) { A.i = i; } }
	def update(i: int);
}
def main(which: int, arg: int, val: int) -> bool {
	// The CallVariantVirtual normalizes to CallFunction
	var b = if(which == 0, B.B1, B.B2);
	A.i = arg;
	var i = A.i;
	b.update(val);
	return A.i == i;
}
