#!/bin/bash
. $(command dirname ${BASH_SOURCE[0]})/funcs.bash
S=${BASH_SOURCE[0]}
while [ -h "$S" ]; do
  DIR=$(cd -P $(dirname "$S") >/dev/null 2>&1 && pwd)
  S=$(readlink "$S")
  [[ $S != /* ]] && S=$DIR/$S
done
DIR=$(cd -P $(dirname "$S") >/dev/null 2>&1 && pwd)
java -client -Xms900m -Xmx900m -XX:+UseSerialGC -jar $DIR/Aeneas.jar "$@"
