#!/bin/bash
BIN=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $BIN && pwd)
RT=$(cd $BIN/../rt/ && pwd)
LIB=$(cd $BIN/../lib/ && pwd)
V3C=${V3C:=$BIN/v3c}
RT_FILES=$(echo $RT/x86-64-linux/*.v3 $RT/native/*.v3 $RT/gc/*.v3 $LIB/util/*.v3)
exec $V3C -heap-size=200m -stack-size=2m -target=x86-64-linux -rt.sttables -rt.gc -rt.gctables -rt.files="$RT_FILES" "$@"
