#!/usr/bin/env bash
BIN=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $BIN && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
RT_FILES=$(echo $RT/x86-linux/*.v3 $RT/native/*.v3 $RT/gc/*.v3)
exec $V3C -heap-size=100m -stack-size=1m -target=x86-linux -rt.sttables -rt.gc -rt.gctables -rt.files="$RT_FILES" "$@"
