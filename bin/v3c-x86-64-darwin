#!/bin/bash
SOURCE=${BASH_SOURCE[0]}
HERE=$(command dirname $SOURCE)
. $HERE/funcs.bash
BIN=$(cd $HERE/ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
RT_FILES=$(echo $RT/x86-64-darwin/*.v3 $RT/native/*.v3 $RT/gc/*.v3)
exec $V3C -heap-size=200m -stack-size=2m -target=x86-64-darwin -rt.sttables -rt.gc -rt.gctables -rt.files="$RT_FILES" "$@"
