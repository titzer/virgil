#!/bin/bash
. $(command dirname ${BASH_SOURCE[0]})/funcs.bash
BIN=$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)
V3C_LINK=$BIN/v3c

HOSTS=$($BIN/dev/sense_host)

if [ "$HOSTS" = "" ]; then
    echo Unknown host platform.
    exit 1
fi

for host in $HOSTS; do
    exe=$BIN/v3c-$host
    if [ -x $exe ]; then
	$exe $@
	exit $?
    fi
done

echo No suitable targets available.
exit 1
