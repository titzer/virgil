#!/bin/bash

SOURCE=${BASH_SOURCE[0]}
HERE=$(command dirname $SOURCE)
. $HERE/funcs.bash
BIN=$(cd $HERE && pwd)
V3C_LINK=$BIN/v3c

HOSTS=$($BIN/dev/sense_host)

if [ "$HOSTS" = "" ]; then
    echo Unknown host platform.
    exit 1
fi

for host in $HOSTS; do
    exe=$BIN/v3c-$host
    if [ -x $exe ]; then
	$exe $@
	exit $?
    fi
done

echo No suitable targets available.
exit 1
