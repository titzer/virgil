{
  "name": "virgil",
  "displayName": "virgil",
  "description": "Syntax highlighting for Virgil",
  "version": "0.0.1",
  "publisher": "ahuoguo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:virgil"
  ],
  "contributes": {
    "languages": [
      {
        "id": "virgil",
        "extensions": [
          ".v3"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "virgil",
        "scopeName": "source.virgil",
        "path": "./syntaxes/virgil.tmLanguage.json"
      }
    ]
  },
  "configurationDefaults": {
    "virgil": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "dependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-virgil": "file:tree-sitter-virgil"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "ts-change": "rm -r ./node_modules/tree-sitter-virgil && npm install ./tree-sitter-virgil && ./node_modules/.bin/electron-rebuild -w ./tree-sitter-virgil",
    "package": "vsce package",
    "install-local": "code --install-extension ./virgil-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "electron": "^25.8.4",
    "@electron/rebuild": "^3.2.9",
    "eslint": "^8.32.0",
    "typescript": "^4.9.4"
  }
}
