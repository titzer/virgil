#!/bin/bash
SOURCE=${BASH_SOURCE[0]}
HERE=$(command dirname $SOURCE)
. $HERE/funcs.bash
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
N=$RT/native/
W=$RT/wave/
# TODO: use -target=wasm after stable supports -wasm.runcmd=wizeng
RT_FILES=$(echo $W/wave.v3 $W/System.v3 $W/RiRuntime.v3 $W/ShadowStackScanner.v3 $N/NativeGlobalsScanner.v3 $N/NativeFileStream.v3 $RT/gc/*.v3)
exec $V3C -heap-size=100m -target=wasm -wasm.runcmd=wizeng -rt.gc -rt.gctables -rt.files="$RT_FILES" "$@"
