#!/bin/bash
SOURCE=${BASH_SOURCE[0]}
HERE=$(command dirname $SOURCE)
. $HERE/funcs.bash
DEV=$HERE
BIN=$(cd $DEV/.. && pwd)
SRC=$(cd $BIN/../aeneas/src && pwd)
LIB=$(cd $BIN/../lib/ && pwd)
# TODO: use aeneas/src/DEPS ?
exec $BIN/v3c -fp -run $SRC/*/*.v3 $LIB/util/*.v3 $LIB/asm/arm/*.v3 $LIB/asm/x86/*.v3 $LIB/asm/x86-64/*.v3 $LIB/asm/arm64/*.v3 -a "$@"
