#!/bin/bash
HERE=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
#N="$RT/native/"
W="$RT/wasm-gc-wasi1/"
W2="$RT/wasm-wasi1-common/"
U="$(cd $BIN/../lib/util && pwd)"
RT_FILES="$(echo $W/*.v3 $W2/*.v3)"
exec $V3C -entry-export="_start" -heap-start-addr=0x200000 -heap-size=100m -target=wasm-gc -rt.files="$RT_FILES" "$@"
