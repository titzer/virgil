#!/bin/bash
HERE=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
N="$RT/native/"
W="$RT/wasi_snapshot_preview1/"
NATIVE="$N/NativeGlobalsScanner.v3 $N/NativeFileStream.v3"
WASI="$W/*.v3"
GC="$RT/gc/*.v3"
exec $V3C -heap-size=100m -target=wave -rt.gc -rt.gctables "$@" $WASI $NATIVE $GC
