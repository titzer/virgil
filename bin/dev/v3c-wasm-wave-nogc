#!/bin/bash
SOURCE=${BASH_SOURCE[0]}
HERE=$(command dirname $SOURCE)
. $HERE/funcs.bash
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
N=$RT/native
W=$RT/wasm-wave
RT_FILES=$(echo $W/wave.v3 $W/System.v3 $N/NativeFileStream.v3)
exec $V3C -target=wave -heap-size=1k -rt.files="$RT_FILES" "$@"
