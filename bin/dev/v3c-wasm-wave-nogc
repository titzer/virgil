#!/usr/bin/env bash
HERE=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
N="$RT/native/"
W="$RT/wasm-wave/"
RT_FILES=$(echo $W/wave.v3 $W/System.v3 $W/RiRuntime.v3 $N/NativeFileStream.v3)
exec $V3C -heap-size=100m -target=wasm -wasm.runcmd=wizeng -rt.files="$RT_FILES" "$@"
