			var t = newTmpVReg(WasmValueType.I64);
			emit2(WasmOp.I64_EXTEND_U_I32.opcode, dfnv0(t), use(i.input1()));
			emit3(op64.opcode, dfn(i), use(i.input0()), usev0(t));
		}
	}
