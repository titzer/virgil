	def emitShiftShiftL(i: SsaApplyOp, op1: WasmOp, op2: WasmOp, width: int) {
		var t = newTmpVReg(WasmValueType.I64);
		emit3(op1.opcode, dfnv0(t), use(i.input0()), useLongConst(width));
