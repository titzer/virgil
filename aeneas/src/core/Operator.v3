			ENUM,
			ENUM_SET,
			INT => opcode = Opcode.IntEq;
			FLOAT => opcode = Opcode.FloatEq(V3.isDouble(t));
			POINTER,
			ARRAY,
			CLASS,
			FUNCREF,
			RANGE_START => opcode = Opcode.RefEq;
			VARIANT => opcode = Opcode.VariantEq;
			_ => ;
		}
		return newOp0(opcode, [t], [t, t], type_z);
	}
