		if (imm == 1) return emitb_rm(0xD1, a, 4);
		emitb_rm(0xC1, a, 4);
		emitb(imm);
	}
	def shl_cl(a: X86Rm) { emitb_rm(0xD3, a, 4); } // shift left by value in CL
