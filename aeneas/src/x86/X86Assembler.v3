		emitb_rm(0xC1, a, 5);
		emitb(imm);
	}
	def sar_i(a: X86Rm, imm: int) { // arithmetic shift right by immediate
		if (imm == 1) return emitb_rm(0xD1, a, 7);
		emitb_rm(0xC1, a, 7);
		emitb(imm);
	}
	def shr_cl(a: X86Rm) { // shift right by value in CL
		emitb_rm(0xD3, a, 5);
