		emitb(imm);
	}
	def shld_cl(a: X86Rm, b: X86Reg) { emitbb_rm(0x0F, 0xA5, a, b.index); } // shift left by value in CL and shift in bits from b
	def sar_cl(a: X86Rm) { emitb_rm(0xD3, a, 7); } // arithmetic shift right by value in CL
