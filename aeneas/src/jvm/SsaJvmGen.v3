		if (tt.width > 32) {
			// TODO: generate inline 64-bit unsigned compare
			if (tt.isU64()) return jprog.invokesystem(code, lsysMethName, JvmTypes.SIG_LONG_LONG_INT);
			code.lcmp();
			var height = code.cur_stack;
			var pos1 = code.branch_fw(lop);
			code.iconst_0();
			var pos2 = code.goto_fw();
			code.patchBranch(pos1);
			code.iconst_1();
			code.patchBranch(pos2);
			code.cur_stack = height;
		} else {
			// TODO: generate inline 32-bit unsigned compare
			if (tt.isU32()) return jprog.invokesystem(code, isysMethName, JvmTypes.SIG_INT_INT_INT);
			var height = code.cur_stack - 1;
			var pos1 = code.branch_fw(iop);
			code.iconst_0();
			var pos2 = code.goto_fw();
			code.patchBranch(pos1);
			code.iconst_1();
			code.patchBranch(pos2);
