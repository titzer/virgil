	}
	def i2xf(i: SsaApplyOp) {
		if (isFloat64t(i.op.sig.returnType())) code.i2d(); else code.i2f();
	}
	def l2xf(i: SsaApplyOp) {
		if (isFloat64t(i.op.sig.returnType())) code.l2d(); else code.l2f();
	}
	def xfzero(t: Type) {
