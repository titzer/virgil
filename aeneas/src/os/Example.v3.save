class C {
	var c1: int;
}

class D extends C {
	var d1: int;
}


class M describes C {
	var m1: bool;
}

class N extends M {
	var n1: u8;
}

[ Could have instead:
  class N extends M describes D {
    // D must subclass C   ---^
          var n1: u8;
  }
]

[ Multiple described classes:
  class N extends M describes D, E {
    // D must subclass C   ---^
          var n1: u8;
  }
]


def m = M.new();

var cm = m.C.new();
var dm = m.D.new();

var desc = dm.descriptor();

def n = N.new();

var cn = n.C.new();
var dn = n.D.new();

